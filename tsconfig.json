{
    "include": ["src"],
    "exclude": ["node_modules", "lib"],
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "noEmit": true,
        "declaration": true,
        "sourceMap": true,
        "noEmitOnError": true,
        "stripInternal": true,
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true
        // "typeRoots": ["node_modules/@types"]
    }
}
